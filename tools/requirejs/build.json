{
	"appDir": "../../public",

	"baseUrl": "./js",

	"dir": "../../public_dist/",

	"paths": {
		"requirejs": "../vendor/requirejs/require",
		"text": "../vendor/requirejs-text/text",
		"jquery": "../vendor/jquery/dist/jquery",
		"pagejs": "../vendor/page.js/page",
		"history": "../vendor/html5-history-api/history.iegte8",
		"ractive": "../vendor/ractive/ractive",
		"es5Shim": "../vendor/es5-shim/es5-shim",
		"templates": "../../views"
	},

	"modules": [
		{
			"name": "main",
			"include": [
				"requirejs",
				"text",
				"jquery",
				"ractive",
				"plugins/controllers-manager-2",
				"plugins/router",
				"plugins/data-layer",
				"plugins/events-manager",
				"plugins/templates",
				"plugins/ractive-view-helpers",
				"plugins/decorators/image-lazy-load",
				"plugins/async",
				"plugins/app-context",
				"plugins/local-storage",
				"controllers/base-controller"
			]
		}
	],

	"removeCombined": true,
	
	"optimize": "uglify",
	
	"uglify": {
		"max_line_length": 200,
		"beautify": true
	},
	
	"optimizeCss": "standard",

	"skipDirOptimize": true

}